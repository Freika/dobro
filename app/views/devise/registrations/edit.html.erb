<div class="row">
  <div class="col-sm-6 ">
    <h2>Редактирование настроек</h2>

    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :method => :put, role: "form" }) do |f| %>

      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.email_field :email, :autofocus => true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label 'Часовой пояс' %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.time_zone_select :time_zone %>
          </div>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="row">
        <div class="col-sm-6">
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        </div>
      </div>
      <% end %>

      <div class="form-group">
            <%= f.label 'Пароль' %> <i><small>(Оставьте пустым, если не хотите его менять)</small></i>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :password, :autocomplete => "off", class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
            <%= f.label 'Подтверждение пароля' %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
            <%= f.label 'Текущий пароль' %> <i><small>(введите для подтверждения внесенных изменений)</small></i>
        <div class="row">
          <div class="col-sm-6">
            <%= f.password_field :current_password, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <%= f.submit "Сохранить", class: "btn btn-primary" %> - <%= link_to "Отменить", posts_path %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
