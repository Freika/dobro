<h2>Вход</h2>
<div class="col-sm-6">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :username, autofocus: true, label: 'Имя пользователя' %>
      <%= f.input :password, label: 'Пароль' %>
      <%= f.input :remember_me, as: :boolean, label: false, inline_label: true if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Войти", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
